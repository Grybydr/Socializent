<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionBarTheme" parent="Widget.AppCompat.Light.ActionBar">
    </style>

    <style name="TextTheme" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTheme" >
        <item name="android:textColor">@color/colorEditText</item>
    </style>

    <style name="datepicker" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimary</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

