<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionBarTheme" parent="Widget.AppCompat.Light.ActionBar">
    </style>

    <style name="TextTheme" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditTheme" >
        <item name="android:textColor">@color/colorEditText</item>
    </style>

    <style name="datepicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:calendarTextColor">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimary</item>
        <item name="android:numbersBackgroundColor">@color/white</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="timepicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:numbersTextColor">@color/colorPrimary</item>
        <item name="android:numbersBackgroundColor">@color/white</item>
        <item name="android:amPmTextColor">@color/colorAccent</item>
    </style>

