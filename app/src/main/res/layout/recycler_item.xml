<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expand_button"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        android:foreground="?selectableItemBackground"
        android:padding="16dp" />
    <TextView
        android:id="@+id/general_rate"
        android:layout_below="@id/expand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:visibility="visible"/>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/general_rate"
        android:background="@color/white"
        app:el_duration="300"
        app:el_expanded="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_description"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:clickable="true"
            android:elevation="4dp"
            android:layout_margin="5dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/submit_rate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:text="@string/submit_rate"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/current_rate"
            android:layout_below="@id/submit_rate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:visibility="invisible"/>
    </RelativeLayout>


