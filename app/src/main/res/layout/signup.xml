<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@drawable/common_google_signin_btn_icon_dark_normal_background">

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Name:"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Name"
            android:inputType="textPersonName"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorEditText" />

        <TextView
            android:id="@+id/Surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editName"
            android:text="Surname:"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Surname"
            android:inputType="textPersonName"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorEditText" />

        <TextView
            android:id="@+id/usernameSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editSurname"
            android:text="Username:"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/usernameSignUp"
            android:inputType="textPersonName"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorEditText" />

        <TextView
            android:id="@+id/passwordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editUsername"
            android:text="Password:"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/signUppass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/passwordSignUp"
            android:inputType="textPassword"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorEditText" />

        <TextView
            android:id="@+id/emailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/signUppass"
            android:text="Email:"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/signUpemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emailSignUp"
            android:inputType="textEmailAddress"
            android:textSize="25sp"
            tools:layout_height="50dp"
            tools:textColor="@color/colorEditText" />

        <Button
            android:id="@+id/SignUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Sign Up!"
            android:textColorLink="@android:color/holo_red_dark" />
    </RelativeLayout>
</LinearLayout>